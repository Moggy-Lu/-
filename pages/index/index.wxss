/* pages/index/index.wxss */
.container .search-box{
  width: 100%;
  height: 56rpx;
  background:rgba(255,177,0,1);
  padding: 16rpx 0rpx;
}
.container .search-box .search{
  width:700rpx;
  height:60rpx;
  background:rgba(255,255,255,1);
  opacity:1;
  border-radius:30rpx;
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  align-items: center;
}
.container .search-box .search .searchInput{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.container .search-box .search .searchInput .searchBoxText{
  color: #515151;
  font-size: 12px;
  letter-spacing: 1px;
  margin-left: 5px;
}
.container .search-box .search .searchInput image{
  width: 30rpx;
  height: 30rpx;
}
.container .space-box{
  width: 100%;
  height: 140rpx;
  background:rgba(255,177,0,1);
}
.container .swiper-box{
  height: 140px;
  padding: 24rpx;
  margin-top: -164rpx;
  padding-bottom: 0rpx;
}
.container .swiper-box swiper{
  box-shadow:0px 3px 6px rgba(0,0,0,0.16);
  border-radius: 20rpx;
}
.container .swiper-box image{
  width: 100%;
  border-radius: 20rpx;
}
.container .swiper-item{
  margin-bottom: 20rpx;
  width: 100%;
  height: 100%;
}
.container .icon-box{
  padding-top: 56rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.container .icon-box .icon-item{
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  text-align: center;
  margin: auto 10rpx;
  border-radius: 16rpx;
  align-items: center;
  width: 30%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-weight: 500;
}
 .container .icon-box .icon-item .iconImg-box{
  width: 88rpx;
  height: 88rpx;
  opacity: 1;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
 }
.container .icon-box image{
  width: 56rpx;
  height: 56rpx;
}
.container .topnavFixed{
  position: fixed;
  top: 0;
  background: #fff;
  z-index: 999;
  padding: 12rpx 0rpx 12rpx 0rpx;
}
.container .topnavRelative{
  position: relative;
  margin: 48rpx 0 24rpx 0;
}
.container .classify-box{
  width: 100%;
}
.container .classify-box .scroll-view{
  display: flex;
  white-space: nowrap;
}
.container .classify-box .scroll-item{
  font-size: 32rpx;
  color:rgba(153,153,153,1);
  display: inline-block;
  /* padding-bottom: 8rpx; */
  margin-left: 48rpx;
}
.container .classify-box .active{
  color:rgba(51,51,51,1);
  border-bottom: 6rpx #FFB100 solid;
  font-weight: 600;
  font-size: 40rpx;
}
.container .classify-box .filter-box .screen-item{
  position: absolute;
  display: flex;
  right: 30rpx;
  color:rgba(153,153,153,1);
  font-size: 32rpx;
  top: 6rpx;
  align-items: center;
}
.container .classify-box .filter-box .screen-box{
  position: absolute;
  top: 0;
  right: 0;
  z-index: 999;
  background: #fff;
  box-shadow:0px 6px 20px rgba(0,0,0,0.1);
  border-radius:10rpx;
}
.container .classify-box .filter-box .screen-box .radio-group{
  display: flex;
  flex-direction: column;
  width: 200rpx;
  margin: 32rpx;
  margin-top: 8rpx;
}
.container .classify-box .filter-box .screen-box .radio-group radio{
  margin-top: 24rpx;
}
.container .classify-box .filter-box image{
  width:32rpx;
  height:32rpx;
  background:rgba(198,198,198,1);
  border-radius:50%;
  margin-left: 8rpx;
}
.allHideComment{
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(8, 8, 8, 0.1);
  width: 100%;
  height: 100%;
  z-index: 101;
}
.comment-box{
  display: flex;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  background-color: #fefefe;
  padding: 16rpx 0;
  z-index: 102;
}
.comment-box input{
  width: 85%;
}
.comment-box .commentBtn{
  font-size: 32rpx;
  color: #757575;
  font-weight: 500;
}