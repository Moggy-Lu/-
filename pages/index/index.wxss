/* pages/index/index.wxss */
page{
  background: #f5f5f5;
}
.container .search-box{
  width: 100%;
  height: 56rpx;
  background:rgba(74,161,255,1);
  padding: 16rpx 0rpx;
}
.container .search-box .search{
  width:700rpx;
  height:56rpx;
  background:rgba(255,255,255,1);
  opacity:1;
  border-radius:30rpx;
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  align-items: center;
}
.container .search-box .search .search-spot{
  width:14px;
  height:14px;
  background:rgba(153,153,153,1);
  border-radius:50%;
  opacity:1;
  margin: 0 6rpx 0 32rpx;
}
.placeholder{
  width: 28px;
  color:rgba(153,153,153,1);
}
.container .search-box .search input{
  width: 90%;
}
.container .swiper-box{
  padding: 24rpx;
}
.container .swiper-box image{
  width: 100%;
  border-radius: 20rpx;
}
.container .swiper-item{
  margin-bottom: 20rpx;
  width: 100%;
  height: 100%;
}
.container .icon-box{
  height: 150rpx;
  border-radius: 20rpx;
  margin: 24rpx;
  margin-top: 0rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 10px rgba(0,0,0,0.1);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.container .icon-box .icon-item{
  /* flex: 1; */
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  text-align: center;
  margin: auto 10rpx;
  border-radius: 16rpx;
  align-items: center;
  width: 30%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-weight: 500;
  color:rgba(51,51,51,1);
}
.container .icon-box image{
  width:56rpx;
  height:56rpx;
  background:rgba(242,242,242,1);
  border-radius:50%;
  margin-bottom: 10rpx;
}
.container .classify-box{
  width: 100%;
  margin: 48rpx 0 24rpx 0;
}
.container .classify-box .scroll-view{
  display: flex;
  white-space: nowrap;
}
.container .classify-box .scroll-item{
  font-size: 32rpx;
  color:rgba(153,153,153,1);
  display: inline-block;
  padding-bottom: 8rpx;
  margin-left: 48rpx;
}
.container .classify-box .active{
  color:rgba(51,51,51,1);
  border-bottom: 6rpx #4AA1FF solid;
  font-weight: 500;
}
