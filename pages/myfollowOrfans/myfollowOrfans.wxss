/* pages/myfollowOrfans/myfollowOrfans.wxss */
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.container .userItem{
  display: flex;
}
.container .userItem .leftBox{
  display: flex;
  justify-content: center;
  align-items: center;
}
.container .userItem .leftBox image{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin: 38rpx 24rpx 38rpx 32rpx;
}
.container .userItem .rightBox{
  margin-right: 32rpx;
  width: 100%;
  display: flex;
  border-bottom: 1px #F2F2F2 solid;
  align-items: center;
}
.container .userItem .rightBox .nickname{
  color: #7E7E7E;
  font-size: 32rpx;
  margin: 32rpx 0rpx;
}