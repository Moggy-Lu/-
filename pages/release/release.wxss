/* pages/release/release.wxss */
.release-container{
  margin: 30rpx 30rpx;
}
.release-container .textarea-box{
  font-size: 16px;
  letter-spacing: .8px;
}
.release-container .tag{
  color:rgba(74,161,255,1);
  font-size: 32rpx;
  line-height: 48rpx;
  height: 48rpx;
}
.placeholder{
  font-size: 15px;
  color: #eee;
}
.release-container .updateImageBox{
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  padding-bottom: 40rpx;
  border-bottom: 1px solid rgba(242,242,242,1);
}
.release-container .tag-box{
  padding: 32rpx;
  display: flex;
  font-size: 32rpx;
  line-height: 48rpx;
  flex-direction: column;
}
.release-container .tag-box .title{
  color:rgba(199,198,198,1);
}
.release-container .tag-box .item-box{
  display: flex;
  flex-direction: row;
}
.release-container .tag-box .tag-item{
  margin-right: 40rpx;
  color:rgba(74,161,255,1);
}
.release-container .updateImageBox .upImage-box{
  position: relative;
}
.release-container .updateImageBox image{
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
}
.release-container .updateImageBox .addImg-box{
  width: 200rpx;
  height: 200rpx;
  background:rgba(242,242,242,1);
  margin: 10rpx;
}
.release-container .updateImageBox .addImg-box image{
  margin: 80rpx;
  width: 40rpx;
  height: 40rpx;
  padding: 0;
}
.release-container .updateImageBox .deleteBtn image{
  min-width: 0;
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
}
.release-container .releaseButton{
  background:rgba(255,177,0,1);
  bottom: 0;
  width: 100%;
  color: #fff;
  border-radius: 0;
  margin-top: 32rpx;
}
button::after{
  border: none;
}