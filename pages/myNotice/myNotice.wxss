/* pages/myNotice/myNotice.wxss */
.noticeContainer{
  width: 100%;
  height: 100%;
}
.noticeContainer .noticeHeader{
  display: flex;
  border-bottom: #F2F2F2 1px solid;
  height: 46px;
  box-sizing: border-box;
}
.noticeContainer .noticeHeader .headerItem{
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  line-height:18px;
}
.noticeContainer .noticeHeader .headerItem .text{
  padding: 24rpx 0rpx;
  color: #999999;
  font-size: 16px;
}
.noticeContainer .noticeHeader .headerItem .active{
  color: #000;
  font-weight: 500;
  border-bottom: 4px #FFB100 solid;
}
.noticeContainer .noticeMain{
  width: 100%;
  height: 100%;
}
.noticeContainer .noticeMain .noticeItem{
  display: flex;
}
.noticeContainer .noticeMain .noticeItem .leftBox .headerImg{
  width: 40px;
  height: 40px;
  margin: 16px 12px 0px 16px;
  background: #C7C6C6;
  border-radius: 50%;
}
.noticeContainer .noticeMain .noticeItem .leftBox .headerImg image{
  width: 40px;
  height: 40px;
}
.noticeContainer .noticeMain .noticeItem .rightBox{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin: 16px 16px 0px 0px;
  border-bottom: 1px #F2F2F2 solid;
}
.noticeContainer .noticeMain .noticeItem .rightBox .itemText{
  color: #333333;
  font-size: 14px;
  letter-spacing: 1px;
  margin-bottom: 4px;
}
.noticeContainer .noticeMain .noticeItem .rightBox .itemTime{
  color: #999999;
  margin-bottom: 16px;
  font-size: 12px;
}