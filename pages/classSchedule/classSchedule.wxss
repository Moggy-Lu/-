/* pages/classSchedule/classSchedule.wxss */
page{
  background:rgba(242,242,242,1);
}
.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}
.container .classic-main{
  display: flex;
  flex-direction: column;
  margin: 24rpx 24rpx 0rpx 24rpx;
}
.container .classic-main .week-box{
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
}
.container .classic-main .week-box .week-item{
  width: 72rpx;
  height: 72rpx;
  font-weight: 500;
  color:rgba(153,153,153,1);
  font-size: 28rpx;
  text-align: center;
  line-height: 72rpx;
}
.container .classic-main .week-box .active{
  background:rgba(255,177,0,1);
  border-radius: 50%;
  color: #fff;
}
.container .classic-main .classicList{
  display: flex;
  flex-direction: column;
}
.container .classic-main .classicList .classic-text{
  background:rgba(255,255,255,1);
  border-radius:10px;
  display: flex;
  margin-bottom: 24rpx;
}
.container .classic-main .classicList .classic-text .icon-cirlce{
  width: 12rpx;
  height: 12rpx;
  border:2px solid rgba(254,168,38,1);
  border-radius:50%;
  margin: 44rpx 16rpx 0 32rpx;
}
.container .classic-main .classicList .classic-text .info-box{
  display: flex;
  flex-direction: column;
  margin-top: 32rpx;
}
.container .classic-main .classicList .classic-text .info-box .main-info{
  display: flex;
  flex-direction: column;
}
.container .classic-main .classicList .classic-text .info-box .main-info .classic-title{
  font-size:32rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.container .classic-main .classicList .classic-text .info-box .main-info .classic-address{
  font-size:32rpx;
  font-weight:600;
  color:rgba(74,161,255,1);
  padding: 8rpx 0;
}
.container .classic-main .classicList .classic-text .info-box .minor-info{
  display: flex;
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  margin-bottom: 32rpx;
}
.container .classic-main .classicList .classic-text .info-box .minor-info
.minor-item{
  margin-right: 18rpx;
}