/* pages/classSchedule/classSchedule.wxss */
page{
  background:rgba(242,242,242,1);
}
.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}
.container .search-box{
  width: 100%;
  height: 56rpx;
  background:rgba(74,161,255,1);
  padding: 16rpx 0rpx;
}
.container .search-box .search{
  width:700rpx;
  height:56rpx;
  background:rgba(255,255,255,1);
  opacity:1;
  border-radius:30rpx;
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  align-items: center;
}
.container .search-box .search .search-spot{
  width:14px;
  height:14px;
  background:rgba(153,153,153,1);
  border-radius:50%;
  opacity:1;
  margin: 0 6rpx 0 32rpx;
}
.placeholder{
  width: 28px;
  color:rgba(153,153,153,1);
}
.container .search-box .search input{
  width: 90%;
}
.container .classic-main{
  display: flex;
  flex-direction: column;
  margin: 24rpx 24rpx 0rpx 24rpx;
  border-radius:10px;
  background:rgba(255,255,255,1);
}
.container .classic-main .week-box{
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
  border-bottom: 1px solid rgba(242,242,242,1);
}
.container .classic-main .week-box .week-item{
  width: 72rpx;
  height: 72rpx;
  font-weight: 500;
  color:rgba(153,153,153,1);
  font-size: 28rpx;
  text-align: center;
  line-height: 72rpx;
}
.container .classic-main .week-box .active{
  background:rgba(74,161,255,1);
  border-radius: 50%;
  color: #fff;
}
.container .classic-main .classicList{
  display: flex;
  flex-direction: column;
}