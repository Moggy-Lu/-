/* pages/articleDetail/articleDetail.wxss */
.detail-container{
  background: #fff;
  margin: 32rpx;
}
.detail-container .article-main .article-header .user-main{
  display: flex;
  align-items: center;
}
.detail-container .article-main .article-header image{
  width: 40px;
  height: 40px;
  margin: 0rpx 16rpx 24rpx 0rpx;
  border-radius: 50%;
}
.detail-container .article-main .article-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.detail-container .article-main .article-header .userName{
  display: flex;
  flex-direction: column;
}
.detail-container .article-main .article-header .name{
  color:rgba(51,51,51,1);
  font-size: 28rpx;
}
.detail-container .article-main .article-header .userName .time{
  color:rgba(153,153,153,1);
  font-size: 28rpx;
}
.detail-container .article-main .article-header .concern-btn{
  font-size: 26rpx;
  color: #FFB100;
  padding: 16rpx 24rpx;
  border:1px solid rgba(255,177,0,1);
  border-radius:38rpx;
}
.detail-container .article-main .article{
  font-size:32rpx;
  line-height:24px;
  color:rgba(51,51,51,1);
}
.detail-container .article-main .article .imagesList{
  margin-top: 8rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.detail-container .article-main .article .imagesList image{
  width: 210rpx;
  height: 210rpx;
  margin: 2px;
  border-radius: 5px;
}
.detail-container .comment-box {
  display: flex;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  background-color: #fefefe;
  border-top: 1rpx #eee solid;
  padding: 20rpx 20rpx;
  z-index: 99;
  margin-left: -24rpx;
}
.detail-container .comment-box input{
  width: 85%;
}
.detail-container .comment-box .commentBtn {
  font-size: 32rpx;
  color: #757575;
  font-weight: 500;
}
.placeholderCss{
  color: #9e9e9e;
  font-size: 26rpx;
}
.detail-container .action-icon{
  display: flex;
  width: 100%;
  justify-content: space-around;
  border-bottom: 1px solid rgba(242,242,242,1);
}
.detail-container .comment-main{
  margin-bottom: 110rpx;
}