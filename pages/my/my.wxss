/* pages/my/my.wxss */
page{
  background: #F2F2F2;
}
.myContainer{
  width: 100%;
}
.myContainer .my-header{
  margin: 24rpx;
  border-radius:10px;
  background:rgba(255,255,255,1);
}
.myContainer .my-header .userInfo-mian{
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 40rpx 0rpx 26rpx 0rpx;
  border-bottom:2px solid rgba(242,242,242,1);
}
.myContainer .my-header .userInfo-mian .avatarUrl image{
  width: 67px;
  height: 67px;
  border-radius: 50%;
}
.myContainer .my-header .userInfo-mian .userName{
  margin-top: 24rpx;
  font-weight: 500;
  font-size: 32rpx;
}
.myContainer .my-header .fans-box{
  display: flex;
}
.myContainer .my-header .fans-box .item{
  display: flex;
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  justify-content: center;
  font-size: 28rpx;
}
.myContainer .my-header .fans-box .item .title{
  margin-right: 4px;
}
.myContainer .icon-box{
  height: 150rpx;
  border-radius: 20rpx;
  margin: 24rpx;
  margin-top: 0rpx;
  background:rgba(255,255,255,1);
  /* box-shadow:0px 0px 10px rgba(0,0,0,0.1); */
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.myContainer .icon-box .icon-item{
  /* flex: 1; */
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  text-align: center;
  margin: auto 10rpx;
  border-radius: 16rpx;
  align-items: center;
  width: 30%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-weight: 500;
  color:rgba(51,51,51,1);
}
.myContainer .icon-box image{
  width:56rpx;
  height:56rpx;
  background:rgba(242,242,242,1);
  border-radius:50%;
  margin-bottom: 10rpx;
}