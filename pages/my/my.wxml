<!--pages/my/my.wxml-->
<view class='container'>
  <view class='space-box'></view>
  <view class='personal-box'>
    <view class='avatarImg'>
      <image src='{{userInfo.avatarUrl}}'></image>
    </view>
    <view class='message-box'>
      <view class='name'>{{userInfo.nickName}}</view>
      <view class='follow-box'>
        <view style='border-right: 2rpx rgba(51,51,51,1) solid;' class='item'>
          <view class='title'>关注</view>
          <view class='number'>{{0}}</view>
        </view>
        <view style='padding-left: 24rpx;' class='item'>
          <view class='title'>粉丝</view>
          <view class='number'>{{0}}</view>
        </view>
      </view>
    </view>
  </view>
  <view class='myBtn-box'>
    <view bindtap='bindMyMessageOn' class='item'>
      <image src='../../imgs/icon/myMessage.png'></image>
      <view class='title'>我的动态</view>
    </view>
    <view class='item'>
      <image src='../../imgs/icon/myNews.png'></image>
      <view class='title'>我的消息</view>
    </view>
    <view class='item'>
      <image src='../../imgs/icon/unused.png'></image>
      <view class='title'>我的闲置</view>
    </view>
    <view bindtap='bindMyActiveOn' class='item'>
      <image src='../../imgs/icon/active.png'></image>
      <view class='title'>我的活动</view>
    </view>
  </view>
  <view class='personal-setting'>
    <view class='item'>
      <image src=''></image>
      <view class='title'>个人资料</view>
    </view>
    <view class='item'>
      <image src=''></image>
      <view class='title'>我的客服</view>
    </view>
    <view class='item'>
      <image src=''></image>
      <view class='title'>关于小程序</view>
    </view>
  </view>
</view>
