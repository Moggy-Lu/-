.container .active-main{
  display: flex;
  position: relative;
  z-index: 99;
  border-bottom: 16rpx rgba(242,242,242,0.7) solid;
}
.container .active-main .poster image{
  width:112px;
  height:157px;
  border-radius: 5px;
  margin: 32rpx 32rpx 40rpx 32rpx;
}
.container .active-main .active-info{
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  width: 100%;
  position: relative;
}
.container .active-main .active-info .info-box{
  display: flex;
  flex-direction: column;
}
.container .active-main .active-info .info-box .title{
  margin-top: 32rpx;
  padding: 0;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
}
.container .active-main .active-info .info-box .group{
  font-size:28rpx;
  color:rgba(74,161,255,1);
}
.container .active-main .active-info .btn-box{
  display: flex;
  width: 100%;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  bottom: 16rpx;
  left: 0rpx;
}
.container .myActive{
  display: flex;
  flex-direction: column;
  padding: 32rpx 32rpx 40rpx 40rpx;
  border-bottom: 16rpx rgba(242,242,242,0.7) solid;
}
.container .myActive .title-box{
  display: flex;
  flex-direction: column;
}
.container .title-box .text{
  font-size: 32rpx;
  line-height: 44rpx;
  font-weight: 500;
  color:rgba(0,0,0,1);
  margin-bottom: 8rpx
}
.container .title-box .title-icon{
  width:40rpx;
  height:8rpx;
  background:rgba(255,177,0,1);
  opacity:1;
  border-radius:4rpx;
}
.container .myActive .data-box{
  display: flex;
  width: 100%;
  border-bottom:1px solid rgba(242,242,242,1);
}
.container .myActive .data-box .data-item{
  display: flex;
  flex-direction: column;
  flex: 1;
}
.container .myActive .data-box .data-item .text{
  font-size: 28rpx;
  line-height: 48rpx;
  color:rgba(51,51,51,1);
  margin: 32rpx 0rpx 12rpx 0rpx;
}
.container .myActive .data-box .data-item .num{
  font-size: 44rpx;
  line-height: 52rpx;
  font-weight: 500rpx;
  margin-bottom: 34rpx;
}
.container .myActive .btn-box{
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.container .myActive .btn-box .begin-box{
  display: flex;
  justify-content: space-around;
  flex: 1;
}
.container .myActive .btn-box .code-box{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container .myActive .btn-box .btn-item{
  margin-top: 32rpx;
}
.container .myActive .btn-box .btn-item image{
  width: 68rpx;
  height: 68rpx;
}
.container .basic-box{
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
  border-bottom: 16rpx rgba(242,242,242,0.7) solid;
}
.container .basic-box .basic-item{
  display: flex;
  width: 100%;
  align-items: center;
}
.container .basic-box .basic-item .item-icon{
  width:24rpx;
  height:24rpx;
  border:4rpx solid rgba(112,112,112,1);
  opacity:1;
  border-radius:16rpx;
  align-items: center;
  margin-right: 16rpx;
}
.container .basic-box .basic-item .text{
  font-size: 28rpx;
  font-weight: 500;
  padding: 32rpx 30rpx 32rpx 0rpx;
  border-bottom: 1px solid rgba(242,242,242,1);
  width: 100%;
}
.container .introduce-box{
  display: flex;
  flex-direction: column;
  padding: 32rpx 32rpx 40rpx 40rpx;
}
.container .introduce-box .message{
  font-size: 28rpx;
  color:rgba(51,51,51,1);
  padding: 32rpx 0rpx;
  border-bottom: 1px solid rgba(242,242,242,1);
}
.container .qrCodeShowModel{
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 99;
  background: rgba(51,51,51,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.container .qrCodeShowModel .qrCode{
  z-index: 999;
  width: 400rpx;
  height: 500rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container .qrCodeShowModel .qrCode image{
  width: 300rpx;
  height: 300rpx;
}