/* pages/createActive/createActive.wxss */
.container{
  width: 100%;
  position: relative;
}
.container .mainFormBox{
  box-shadow:0px 3px 10px rgba(0,0,0,0.16);
  background:rgba(255,255,255,1);
  border-radius:20rpx;
  margin: 32rpx 32rpx 32rpx 32rpx;
}
.container .mainFormBox .item-box{
  padding: 32rpx 0rpx 24rpx 32rpx;
  display: flex;
  flex-direction: column;
}
.container .mainFormBox .item-box .title-text{
  font-size: 32rpx;
  line-height: 44rpx;
  font-weight: 500;
  color:rgba(0,0,0,1);
  margin-bottom: 8rpx
}
.container .mainFormBox .item-box .title-icon{
  width:40rpx;
  height:8rpx;
  background:rgba(255,177,0,1);
  opacity:1;
  border-radius:4rpx;
}
.container .mainFormBox .item-box .prompt{
  font-size:28rpx;
  color:rgba(199,198,198,1);
  margin-top: 24rpx;
}
.container .mainFormBox .item-box .input-box{
  display: flex;
  width: 100%;
  margin-top: 32rpx;
  justify-content: space-between;
}
.container .mainFormBox .item-box .input-box .name{
  font-size: 28rpx;
  margin-right: 32rpx;
}
.container .mainFormBox .item-box .input-box .input-item{
  padding-bottom: 32rpx;
  border-bottom: 2rpx #F2F2F2 solid;
  width: 510rpx;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 44rpx;
  color: (0,0,0,1);
}
.container .mainFormBox .item-box .input-box .input-item .placeCss{
  font-size:28rpx;
  font-weight:400;
  line-height:44rpx;
  color:rgba(199,198,198,1);
}
.container .mainFormBox .item-box .input-box .input-item .picker-box{
  display: flex;
  font-size: 28rpx;
}
.container .mainFormBox .item-box .input-box .input-item .pickerDefalut{
  font-size: 28rpx;
  color:rgba(199,198,198,1);
}
.container .mainFormBox .item-box .input-box .input-item .picker{
  font-size: 28rpx;
  font-weight: 600;
  line-height: 44rpx;
  color: (0,0,0,1);
}
.container .mainFormBox .item-box .addPoster{
  width:120rpx;
  height:120rpx;
  background:rgba(242,242,242,1);
  border-radius:20rpx;
  margin-top: 24rpx;
  margin-bottom: 60rpx;
}
.container .mainFormBox .item-box .addPoster image{
  width: 34rpx;
  height: 34rpx;
  margin: 42rpx;
}
.container .mainFormBox .item-box .Poster image{
  width:140rpx;
  height:220rpx;
  border-radius:20rpx;
  margin-top: 24rpx;
  margin-bottom: 60rpx;
}
.container button{
  background:rgba(255,177,0,1);
  bottom: 0;
  color: #fff;
  margin: 32rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  margin-top: 80rpx;
}
.container button::after{
  border: none;
}