/* components/comment/comment@info/index.wxss */
.container{
  padding: 26rpx 0;
  border-bottom: 1rpx #eee solid;
}
.container .header{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.container .header .leftBox{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.container .header .rightBox{
  display: flex;
}
.container .header .rightBox .itemBox{
  display: flex;
  align-items: center;
}
.container .header .rightBox .itemBox .iconItem{
  width: 20px;
  height: 20px;
  background: #C7C6C6;
  border: 1px solid #C7C6C6;
  border-radius: 50%;
}
.container .header .rightBox .itemBox .number{
  color: #C7C6C6;
  margin-left: 4px;
}
.container .header .avatarUrl image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
  border-radius: 50%;
}
.container .header .userInfo{
  display: flex;
  flex-direction: column;
  line-height: 14px;
}
.container .header .userInfo .nickName{
  font-size: 26rpx;
  color:rgba(126,126,126,1);
  line-height: 36rpx;
}
.container .header .userInfo .upDate{
  font-size: 20rpx;
  color:rgba(153,153,153,1);
  line-height: 36rpx;
}
.container .commentText{
  font-size: 28rpx;
  color:rgba(51,51,51,1);
  margin: 8rpx 0rpx 8rpx 76rpx;
}
.container .subreply-box{
  background:rgba(242,242,242,1);
  margin-left: 76rpx;
  font-size: 26rpx;
  padding: 14rpx;
  display: flex;
  flex-direction: column;
}
.container .subreply-box .subreply-item{
  display: flex;
  margin-bottom: 6rpx;
  color:rgba(51,51,51,1);

}
.container .subreply-box .subreply-name{
  color: #039be5;
  font-size: 26rpx;
  line-height: 36rpx;
  white-space: nowrap;
  height: 36rpx;
  float: left;
}
.container .subreply-box .hiddenComment{
  display: flex;
}
.container .subreply-box .hiddenComment .commentUser{
  color: #039be5;
}
.container .subreply-box .hiddenComment .moreBtn{
  color: #039be5;
}
.container .subreply-box .hiddenComment span{
  margin: 0px 2px;
}